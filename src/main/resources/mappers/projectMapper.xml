<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace = "com.ashspell.project.user.dao.UserDAO">
 	<insert id = "insertuser" parameterType = "map">
 		INSERT INTO `project` (
 			`id`
 			, `loginid`
 			, `password`
 			, `email`
 			, `name`
 			, `hometown`
 			, `createdAt`
 			, `updatedAt`
 			) value (
 				#{id}
 				, #{loginid}
 				, #{password}
 				, #{email}
 				, #{name}
 				, #{hometown}
 				, now()
 				, now()
 			)
 	</insert>
 		
 	<select id = "selectuser" parameterType = "map" resultType = "com.ashspell.project.user.model.User">
 		     SELECT `id`
 		     , `loginid`
 		     , `password`
 		     , `email`
 		     , `name`
 		     , `hometown`
 		     , `createdAt`
 		     , `updatedAt`
 		     
 		     FROM 
 		     	`project`
 		     
 		     WHERE 
 		     	`loginid` = #{loginid}
 		     	`password` = #{password}
 	</select>
 	
 	
 
 
 
 
 </mapper>