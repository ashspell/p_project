<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace = "com.ashspell.project.post.dao.PostDAO">
 	<insert id = "insertpost" parameterType = "map">
 		INSERT INTO `post`(
 			`title`,
 			`hometown`,
 			`content`,
 			`createdAt`,
 			`updatedAt`
 		)value(
 			#{title},
 			#{hometown},
 			#{content},
 			now(),
 			now()
 		)
 	</insert>
 	
 	<select id = "selectPostList" parameterType = "int" resultType = "com.ashspell.project.post.model.Post">
 		SELECT 
 			`id`,
 			`title`,
 			`content`,
 			`createdAt`
 			
 		FROM
 			`post`
 		
 		ORDER BY `id` DESC
 	
 	</select>
 	
 	<select id = "selectpost" parameterType = "int" resultType= "com.ashspell.project.post.model.Post">
 		SELECT
 			`title`,
 			`content`,
 			`createdAt`,
 			`updatedAt`
 		FROM
 			`post`
 		WHERE
 			`id` = #{id}
 	</select>
 	
 	<delete id = "deletepost" parameterType = "int">
 		DELETE FROM 
 			`post`
 		WHERE 
 			`id` = #{id}
 	</delete>
 	
 	<update id = "updatepost" parameterType = "int">
 		UPDATE `post`
 		SET
 			`title` = #{title},
 			`content` = #{content},
 			`filepath` = #{filepath},
 			`createdAt` = now();
 		WHERE
 			`id` = #{id}
 	
 	</update>
 	
 	<select id = "hometownpost" parameterType = "int">
 		SELECT
 			`id`,
 			`title`,
 			`content`,
 			`createdAt`
 		FROM 
 			`post`
 		WHERE
 			`hometown` = #{hometown}
 	</select>
 	
 	
 	
 </mapper>